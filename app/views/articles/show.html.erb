<p id="notice"><%= notice %></p>
<div class="container" style="margin-top: 5%;">
  <div class="col-md-8 col-md-offset-2">
    <div class="row">
      <%= image_tag @article.poster.url, style: "object-fit:cover" %>
      <h1><%= @article.title %></h1>
      <p>Published on: <%= @article.created_at.strftime('%d %b %Y')%></p>
    </div>
    <div class="row">
      <p>
        <strong>Author:</strong>
        <%= @article.author %>
      </p>
      <div style="margin-top: 5%;">
        <p>
          <%= @article.content %>
        </p>
      </div>
    </div>
  </div>
</div>
<% if user_signed_in? %>
<div style="position: relative; margin-left: 80%; margin-top: 2%;">
  <%= link_to '<button class="btn btn-warning" type="button">
    <span class="glyphicon glyphicon-pencil" style="padding-right: 5px;">
    </span> 
    Edit</button>'.html_safe, edit_article_path(@article) %>
</div>
  
<% end %>
